generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User { 
  id               String    @id
  name             String
  prefecture       String
  city             String
  gender           Gender
  birthday         DateTime
  email            String    @unique
  password         String
  role             UserRole  @default(USER)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum UserRole {
  ADMIN
  USER
}